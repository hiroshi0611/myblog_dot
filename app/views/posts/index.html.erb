<h2>My posts</h2>

<ul class="list-group">
<% @posts.each do |post| %>
    <li class="list-group-item text-muted"><%= link_to post.title, post_path(post.id) %>
    <%= link_to '編集', edit_post_path(post.id), class: "btn btn-primary" %>
    <%= link_to '削除', post_path(post.id),method: :delete,  class: "btn btn-danger",data: {confirm: "本当に削除しますか？"} %>
    </li>
    <% end %>
</ul>
<%= link_to '新規作成',new_post_path, class: "header-menu btn btn-primary" %>